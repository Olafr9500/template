{
  "name": "template",
  "version": "1.0.0",
  "description": "Mod√®le de base pour les applications web",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "test": "cypress open",
    "test:cli": "cypress run -q",
    "dev": "npm-run-all --parallel start dev:js dev:icon dev:css",
    "dev:js": "rollup -c rollup.config.js --watch ",
    "dev:icon": "node watch.config.js",
    "dev:css": "sass --no-source-map --watch src/styles:public/css",
    "build": "npm-run-all build:js build:icon build:css",
    "build:js": "npm-run-all rollup terser eslint",
    "build:icon": "npm-run-all fantasticon purgecss:icon cleancss:icon",
    "build:css": "npm-run-all sass purgecss cleancss",
    "rollup": "rollup -c rollup.config.js",
    "terser": "npm-run-all --parallel terser:*",
    "terser:main": "terser -c -m -o public/js/main.min.js public/js/main.js",
    "terser:about": "terser -c -m -o public/js/about.min.js public/js/about.js",
    "eslint": "eslint --fix public/js/",
    "sass": "sass --no-source-map src/styles:public/css",
    "purgecss": "purgecss -c purgecss.config.js --output css/",
    "cleancss": "cleancss -O2 -o css --batch --batch-suffix \".min\" \"css/*.css\" \"!css/*.min.css\"",
    "fantasticon": "fantasticon",
    "purgecss:icon": "purgecss --css css/bootstrap-icons.css --content index.html \"js/*.js\" -o css/bootstrap-icons.css",
    "cleancss:icon": "cleancss -O2 -o css/bootstrap-icons.min.css css/bootstrap-icons.css"
  },
  "keywords": [
    "template",
    "web",
    "application"
  ],
  "author": "Olafr",
  "bugs": {
    "url": "https://github.com/Olafr9500/template/issues"
  },
  "homepage": "https://github.com/Olafr9500/template#readme",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@olafr/modulejs": "^1.2.5",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.3",
    "clean-css-cli": "^5.6.0",
    "cypress": "^10.1.0",
    "eslint": "^8.17.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "fantasticon": "^1.2.3",
    "purgecss": "^4.1.3",
    "rollup": "^2.75.6",
    "sass": "^1.52.3",
    "terser": "^5.14.1",
    "watch": "^0.13.0"
  }
}
