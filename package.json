{
  "name": "template",
  "version": "1.0.0",
  "description": "Mod√®le de base pour les applications web",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "test": "cypress open",
    "test:cli": "cypress run -q",
    "dev": "npm-run-all --parallel --aggregate-output dev:js dev:icon dev:css",
    "dev:js": "rollup -c rollup.config.js --watch",
    "dev:icon": "node watch.config.js",
    "dev:css": "sass --no-source-map --watch src/styles:public/css",
    "build": "npm-run-all build:js build:icon build:css robot sw",
    "build:js": "rollup -c rollup.config.js --environment production:true",
    "build:icon": "npm-run-all fantasticon purgecss:icon cleancss:icon",
    "build:css": "npm-run-all sass purgecss cleancss",
    "sass": "sass --no-source-map src/styles:public/css",
    "purgecss": "purgecss -c purgecss.config.js --output public/css/",
    "cleancss": "cleancss -O2 -o public/css/main.css public/css/main.css",
    "fantasticon": "fantasticon",
    "purgecss:icon": "purgecss --css public/css/bootstrap-icons.css --content \"public/pages/*.html\" \"public/js/*.js\" -o public/css/bootstrap-icons.css",
    "cleancss:icon": "cleancss -O2 -o public/css/bootstrap-icons.css public/css/bootstrap-icons.css",
    "robot": "generate-robotstxt public/robots.txt",
    "sw": "workbox generateSW"
  },
  "keywords": [
    "template",
    "web",
    "application"
  ],
  "author": "Olafr",
  "bugs": {
    "url": "https://github.com/Olafr9500/template/issues"
  },
  "homepage": "https://github.com/Olafr9500/template#readme",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@olafr/modulejs": "^1.2.5",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.3",
    "clean-css-cli": "^5.6.0",
    "cypress": "^10.1.0",
    "eslint": "^8.17.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "fantasticon": "^1.2.3",
    "generate-robotstxt": "^8.0.3",
    "purgecss": "^4.1.3",
    "rollup": "^2.75.6",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.52.3",
    "watch": "^0.13.0",
    "workbox-cli": "^6.5.3"
  }
}
